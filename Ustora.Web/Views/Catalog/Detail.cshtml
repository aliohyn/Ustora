@using Ustora.Web.ViewModels
@model Ustora.Web.ViewModels.CatalogDetailViewModel
@{
    ViewBag.Title = "Shop Page";
}

<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-content-right">
                    <div class="product-breadcroumb">
                        <a href="/">Home</a>
                        <a href="/catalog/">Shop Page</a>
                        <a href="javascript:void(0);">@Model.DetailProduct.Name</a>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            <div class="product-images">
                                <div class="product-main-img">
                                    <img src="@Model.DetailProduct.ImagePath" alt="@Model.DetailProduct.Name">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-8">
                            <div class="product-inner">
                                <h2 class="product-name">@Model.DetailProduct.Name</h2>
                                <div class="product-inner-price">
                                    <ins>@Model.DetailProduct.Price</ins>
                                    @if (Model.DetailProduct.OldPrice > 0)
                                    {
                                        <del>Model.DetailProduct.OldPrice</del>
                                    }
                                </div>
                                <div class="cart">
                                    <a href="javascript:void(0)" class="add_to_cart_button" data-product_id="@Model.DetailProduct.ProductId">Add to cart</a>
                                </div>
                                <br>
                                <br>

                                @if (Model.DetailProduct.Section != null)
                                {
                                    <div class="product-inner-category">
                                        <p>Category: <a href="">@Model.DetailProduct.Section.Name</a></p>
                                    </div>
                                }

                                <div>
                                    <h2>Product Description</h2>
                                    <p>@Model.DetailProduct.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

